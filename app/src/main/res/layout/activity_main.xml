<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFFFFF">
    <Button
            android:text="ИГРА"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btnstart"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_bias="0.0" android:onClick="startPlay"
            android:enabled="false" android:layout_marginTop="20dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="168dp"
            android:id="@+id/linearLayout5"
            android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="54dp" android:layout_marginBottom="195dp"
            app:layout_constraintBottom_toTopOf="@+id/btnstart" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp" android:id="@+id/asdasd2">
            <Button
                    android:text="КАМЕНЬ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnStone" android:onClick="stone"/>
            <Button
                    android:text="БУМАГА"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnPaper" android:layout_marginTop="20dp"
                    android:onClick="paper"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
            <Button
                    android:text="СПОК"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnSpok" android:layout_marginTop="120dp"
                    android:onClick="spok"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <Button
                    android:text="НОЖНИЦЫ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnScissors" android:onClick="scissors"/>
            <Button
                    android:text="ЯЩЕРИЦА"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnLizard" android:layout_marginTop="20dp"
                    android:onClick="lizard"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/paper" android:id="@+id/linearLayout"
            android:layout_marginTop="20dp">
        <TextView
                android:text="Компьютер"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
                android:textSize="26sp" android:textColor="#000000" android:textAlignment="center"/>
        <TextView
                android:text="Игрок"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                android:textSize="26sp" android:textColor="#000000" android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:id="@+id/linearLayout2">
        <TextView
                android:text="Выбирает..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtMachine" android:layout_weight="1"
                android:textSize="26sp" android:textColor="#000000" android:textAlignment="center"/>
        <TextView
                android:text="Выбирает..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtpeople" android:layout_weight="1"
                android:textSize="26sp" android:textColor="#000000" android:textAlignment="center"/>
    </LinearLayout>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="178dp" app:srcCompat="@drawable/image_10" android:id="@+id/leftSpoke"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="20dp" android:visibility="invisible"
            app:layout_constraintVertical_bias="0.54"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="178dp" app:srcCompat="@drawable/image_9" android:id="@+id/leftstone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="20dp" android:visibility="invisible"
            app:layout_constraintVertical_bias="0.54"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="178dp" app:srcCompat="@drawable/image_8" android:id="@+id/leftpaper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="20dp" android:visibility="invisible"
            app:layout_constraintVertical_bias="0.54"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="178dp" app:srcCompat="@drawable/image_11" android:id="@+id/leftLizard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="20dp" android:visibility="invisible"
            app:layout_constraintVertical_bias="0.54"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="178dp" app:srcCompat="@drawable/image_12" android:id="@+id/leftScissors"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="20dp" android:visibility="invisible"
            app:layout_constraintVertical_bias="0.54"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="178dp" app:srcCompat="@drawable/image_10" android:id="@+id/rigthSpoke"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.54" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp"
            android:visibility="invisible"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="178dp" app:srcCompat="@drawable/image_11" android:id="@+id/rigthLizard"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.54" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp"
            android:visibility="invisible"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="178dp" app:srcCompat="@drawable/image_12" android:id="@+id/rigthScissors"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.54" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp"
            android:visibility="invisible"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="178dp" app:srcCompat="@drawable/image_8" android:id="@+id/rigthPaper"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.54" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp"
            android:visibility="invisible"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="178dp" app:srcCompat="@drawable/image_9" android:id="@+id/rigthStone"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.54" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtWin"
            app:layout_constraintTop_toBottomOf="@+id/btnstart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="26sp" android:textColor="#FFAB00"
            android:layout_marginTop="20dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/image_10" android:id="@+id/paper"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnstart" android:visibility="invisible"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="200dp" app:srcCompat="@drawable/_2cbjteeze0" android:id="@+id/img1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" android:layout_marginBottom="20dp" android:background="#FFFFFF"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="200dp" app:srcCompat="@drawable/_2cbjteeze0" android:id="@+id/img2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp" android:background="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>